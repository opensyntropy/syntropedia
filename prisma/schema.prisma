// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  USER
  REVIEWER
  ADMIN
}

enum SpeciesStatus {
  DRAFT
  PUBLISHED
  IN_REVIEW
}

enum Stratum {
  EMERGENT
  HIGH
  MEDIUM
  LOW
  GROUND
}

enum SuccessionalStage {
  PIONEER
  EARLY_SECONDARY
  LATE_SECONDARY
  CLIMAX
}

enum LifeCycle {
  ANNUAL
  BIENNIAL
  PERENNIAL
}

enum CanopyShape {
  CONICAL
  PYRAMIDAL
  COLUMNAR
  ROUNDED
  GLOBOSE
  OVAL
  IRREGULAR
  WEEPING
  UMBRELLA
  PALM
}

enum FoliageType {
  EVERGREEN
  SEMI_EVERGREEN
  DECIDUOUS
  SEMI_DECIDUOUS
}

enum GrowthRate {
  VERY_FAST
  FAST
  MEDIUM
  SLOW
  VERY_SLOW
}

enum RootSystem {
  TAPROOT
  FIBROUS
  TUBEROUS
  ADVENTITIOUS
  PNEUMATOPHORE
  PROP
  MIXED
}

enum BiomassProduction {
  VERY_HIGH
  HIGH
  MEDIUM
  LOW
  VERY_LOW
}

enum PlantUse {
  HUMAN_FOOD
  ANIMAL_FOOD
  TIMBER
  MEDICINAL
  ORNAMENTAL
  HEDGING
  SHADE
  WINDBREAK
  GROUND_COVER
  HONEY
  FIBER
  OIL
  FIREWOOD
  HANDICRAFT
}

enum ReviewDecision {
  APPROVED
  REJECTED
  CHANGES_REQUESTED
}

enum ActivityAction {
  SPECIES_CREATED
  SPECIES_UPDATED
  SPECIES_SUBMITTED
  REVIEW_APPROVED
  REVIEW_REJECTED
  REVIEW_CHANGES_REQUESTED
  SPECIES_PUBLISHED
}

// Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  avatar        String?
  role          UserRole  @default(USER)
  discourseId   String?   @unique @map("discourse_id")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  speciesCreated Species[]  @relation("SpeciesCreator")
  speciesUpdated Species[]  @relation("SpeciesUpdater")
  photos         Photo[]
  changeHistory  ChangeHistory[]
  accounts       Account[]
  sessions       Session[]
  reviewsGiven   SpeciesReview[] @relation("ReviewerReviews")
  activityLogs   ActivityLog[]

  @@map("users")
}

model Species {
  id             String           @id @default(cuid())
  slug           String           @unique

  // Nomenclature
  scientificName String           @map("scientific_name")
  genus          String?
  species        String?
  author         String?
  commonNames    String[]         @map("common_names")
  synonyms       String[]
  botanicalFamily String?         @map("botanical_family")
  variety        String?

  // Base Data
  stratum              Stratum
  successionalStage    SuccessionalStage @map("successional_stage")
  lifeCycle            LifeCycle?        @map("life_cycle")
  lifeCycleYears       String?           @map("life_cycle_years")
  heightMeters         Decimal?          @map("height_meters") @db.Decimal(5, 2)
  canopyWidthMeters    Decimal?          @map("canopy_width_meters") @db.Decimal(5, 2)
  canopyShape          CanopyShape?      @map("canopy_shape")

  // Additional Data
  originCenter         String?           @map("origin_center")
  globalBiome          String?           @map("global_biome")
  regionalBiome        String[]          @map("regional_biome")
  foliageType          FoliageType?      @map("foliage_type")
  leafDropSeason       String?           @map("leaf_drop_season")
  growthRate           GrowthRate?       @map("growth_rate")
  rootSystem           RootSystem?       @map("root_system")
  nitrogenFixer        Boolean           @default(false) @map("nitrogen_fixer")
  biomassProduction    BiomassProduction? @map("biomass_production")
  hasFruit             Boolean           @default(false) @map("has_fruit")
  edibleFruit          Boolean           @default(false) @map("edible_fruit")
  fruitingAge          String?           @map("fruiting_age")

  // Uses
  uses                 PlantUse[]

  // Propagation
  propagationMethods   String[]          @map("propagation_methods")

  // Other
  observations         String?           @db.Text
  status               SpeciesStatus     @default(DRAFT)
  discourseTopicUrl    String?           @map("discourse_topic_url")
  submittedAt          DateTime?         @map("submitted_at")

  // Metadata
  createdById    String   @map("created_by_id")
  createdBy      User     @relation("SpeciesCreator", fields: [createdById], references: [id])
  updatedById    String?  @map("updated_by_id")
  updatedBy      User?    @relation("SpeciesUpdater", fields: [updatedById], references: [id])
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  photos         Photo[]
  changeHistory  ChangeHistory[]
  reviews        SpeciesReview[]
  activityLogs   ActivityLog[]

  @@map("species")
  @@index([slug])
  @@index([stratum])
  @@index([successionalStage])
  @@index([status])
  @@index([scientificName])
  @@index([lifeCycle])
  @@index([foliageType])
  @@index([growthRate])
  @@index([edibleFruit])
  @@index([nitrogenFixer])
  @@index([status, scientificName])
}

model Photo {
  id          String   @id @default(cuid())
  url         String
  caption     String?
  tags        String[]
  location    String?
  approved    Boolean  @default(false)
  primary     Boolean  @default(false)

  speciesId   String   @map("species_id")
  species     Species  @relation(fields: [speciesId], references: [id], onDelete: Cascade)

  uploadById  String   @map("upload_by_id")
  uploadBy    User     @relation(fields: [uploadById], references: [id])
  uploadedAt  DateTime @default(now()) @map("uploaded_at")

  @@map("photos")
  @@index([speciesId])
  @@index([approved])
}

model ChangeHistory {
  id              String   @id @default(cuid())
  changedFields   String   @map("changed_fields")
  previousValue   Json     @map("previous_value")
  newValue        Json     @map("new_value")
  changeReason    String?  @map("change_reason")

  speciesId       String   @map("species_id")
  species         Species  @relation(fields: [speciesId], references: [id], onDelete: Cascade)

  changedById     String   @map("changed_by_id")
  changedBy       User     @relation(fields: [changedById], references: [id])
  changedAt       DateTime @default(now()) @map("changed_at")

  @@map("change_history")
  @@index([speciesId])
  @@index([changedAt])
}

model SpeciesReview {
  id          String          @id @default(cuid())
  speciesId   String          @map("species_id")
  species     Species         @relation(fields: [speciesId], references: [id], onDelete: Cascade)
  reviewerId  String          @map("reviewer_id")
  reviewer    User            @relation("ReviewerReviews", fields: [reviewerId], references: [id])
  decision    ReviewDecision
  comments    String?         @db.Text
  reviewedAt  DateTime        @default(now()) @map("reviewed_at")

  @@unique([speciesId, reviewerId])
  @@map("species_reviews")
  @@index([speciesId])
  @@index([reviewerId])
  @@index([decision])
}

model ActivityLog {
  id          String          @id @default(cuid())
  action      ActivityAction
  details     Json?
  speciesId   String?         @map("species_id")
  species     Species?        @relation(fields: [speciesId], references: [id], onDelete: SetNull)
  userId      String          @map("user_id")
  user        User            @relation(fields: [userId], references: [id])
  createdAt   DateTime        @default(now()) @map("created_at")

  @@map("activity_logs")
  @@index([speciesId])
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

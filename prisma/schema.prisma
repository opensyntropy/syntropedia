// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  USER
  MODERATOR
  ADMIN
}

enum SpeciesStatus {
  DRAFT
  PUBLISHED
  IN_REVIEW
}

enum Stratum {
  EMERGENT
  CANOPY
  SUBCANOPY
  UNDERSTORY
  GROUND_COVER
}

enum SuccessionalStage {
  PIONEER
  EARLY_SECONDARY
  LATE_SECONDARY
  CLIMAX
}

enum LifeCycle {
  ANNUAL
  BIENNIAL
  PERENNIAL
}

enum CanopyShape {
  CONICAL
  PYRAMIDAL
  COLUMNAR
  ROUNDED
  GLOBOSE
  OVAL
  IRREGULAR
  WEEPING
  UMBRELLA
  PALM
}

enum FoliageType {
  EVERGREEN
  SEMI_EVERGREEN
  DECIDUOUS
  SEMI_DECIDUOUS
}

enum GrowthRate {
  VERY_FAST
  FAST
  MEDIUM
  SLOW
  VERY_SLOW
}

enum RootSystem {
  TAPROOT
  FIBROUS
  TUBEROUS
  ADVENTITIOUS
  PNEUMATOPHORE
  PROP
  MIXED
}

enum BiomassProduction {
  VERY_HIGH
  HIGH
  MEDIUM
  LOW
  VERY_LOW
}

enum PlantUse {
  HUMAN_FOOD
  ANIMAL_FOOD
  TIMBER
  MEDICINAL
  ORNAMENTAL
  HEDGING
  SHADE
  WINDBREAK
  GROUND_COVER
  HONEY
  FIBER
  OIL
  FIREWOOD
  HANDICRAFT
}

// Models
model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  avatar     String?
  role       UserRole @default(USER)
  discourseId String? @unique @map("discourse_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  speciesCreated Species[]  @relation("SpeciesCreator")
  speciesUpdated Species[]  @relation("SpeciesUpdater")
  photos         Photo[]
  changeHistory  ChangeHistory[]

  @@map("users")
}

model Species {
  id             String           @id @default(cuid())
  slug           String           @unique

  // Nomenclature
  scientificName String           @map("scientific_name")
  genus          String?
  species        String?
  author         String?
  commonNames    String[]         @map("common_names")
  synonyms       String[]
  botanicalFamily String?         @map("botanical_family")
  variety        String?

  // Base Data
  stratum              Stratum
  successionalStage    SuccessionalStage @map("successional_stage")
  lifeCycle            LifeCycle?        @map("life_cycle")
  lifeCycleYears       String?           @map("life_cycle_years")
  heightMeters         Decimal?          @map("height_meters") @db.Decimal(5, 2)
  canopyWidthMeters    Decimal?          @map("canopy_width_meters") @db.Decimal(5, 2)
  canopyShape          CanopyShape?      @map("canopy_shape")

  // Additional Data
  originCenter         String?           @map("origin_center")
  globalBiome          String?           @map("global_biome")
  regionalBiome        String[]          @map("regional_biome")
  foliageType          FoliageType?      @map("foliage_type")
  leafDropSeason       String?           @map("leaf_drop_season")
  growthRate           GrowthRate?       @map("growth_rate")
  rootSystem           RootSystem?       @map("root_system")
  nitrogenFixer        Boolean           @default(false) @map("nitrogen_fixer")
  biomassProduction    BiomassProduction? @map("biomass_production")
  hasFruit             Boolean           @default(false) @map("has_fruit")
  edibleFruit          Boolean           @default(false) @map("edible_fruit")
  fruitingStart        Int?              @map("fruiting_start")
  fruitingEnd          Int?              @map("fruiting_end")

  // Uses
  uses                 PlantUse[]

  // Propagation
  propagationMethods   String[]          @map("propagation_methods")

  // Other
  observations         String?           @db.Text
  status               SpeciesStatus     @default(DRAFT)
  discourseTopicUrl    String?           @map("discourse_topic_url")

  // Metadata
  createdById    String   @map("created_by_id")
  createdBy      User     @relation("SpeciesCreator", fields: [createdById], references: [id])
  updatedById    String?  @map("updated_by_id")
  updatedBy      User?    @relation("SpeciesUpdater", fields: [updatedById], references: [id])
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  photos         Photo[]
  changeHistory  ChangeHistory[]

  @@map("species")
  @@index([slug])
  @@index([stratum])
  @@index([successionalStage])
  @@index([status])
  @@index([scientificName])
}

model Photo {
  id          String   @id @default(cuid())
  url         String
  caption     String?
  tags        String[]
  location    String?
  approved    Boolean  @default(false)
  primary     Boolean  @default(false)

  speciesId   String   @map("species_id")
  species     Species  @relation(fields: [speciesId], references: [id], onDelete: Cascade)

  uploadById  String   @map("upload_by_id")
  uploadBy    User     @relation(fields: [uploadById], references: [id])
  uploadedAt  DateTime @default(now()) @map("uploaded_at")

  @@map("photos")
  @@index([speciesId])
  @@index([approved])
}

model ChangeHistory {
  id              String   @id @default(cuid())
  changedFields   String   @map("changed_fields")
  previousValue   Json     @map("previous_value")
  newValue        Json     @map("new_value")
  changeReason    String?  @map("change_reason")

  speciesId       String   @map("species_id")
  species         Species  @relation(fields: [speciesId], references: [id], onDelete: Cascade)

  changedById     String   @map("changed_by_id")
  changedBy       User     @relation(fields: [changedById], references: [id])
  changedAt       DateTime @default(now()) @map("changed_at")

  @@map("change_history")
  @@index([speciesId])
  @@index([changedAt])
}
